{
  "name": "recipe",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter './apps/*' dev",
    "build": "bun run check && bun run --filter @recipe/web build && bun run --filter @recipe/cdk build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check . && bun run --filter './apps/*' typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8"
  }
}
